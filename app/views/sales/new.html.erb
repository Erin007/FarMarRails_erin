<h1>Enter a New Sale</h1>

<div class="form-new">
<%= form_for ([:vendor, @sale]) do |f| %>

    <%= f.label :amount %>
    <%= f.text_field :amount%>
    <p></p>
    <%= f.label :purchase %>
    <%= f.text_field :purchase%>
    <p></p>
    <% f.hidden_field :vendor_id, value: @vendor.id %>
    <%= f.select :desired_attribute, [@vendor.product_ids]%>

    <%= f.submit %>
  <%end%>
</div>
